#include <Wire.h>

#define SLAVE_ADDR 8  
#define LED2_PIN 11  

int led2State = 0;  

void setup() {
  Wire.begin(SLAVE_ADDR);
  Wire.onReceive(receiveLED2State);

  pinMode(LED2_PIN, OUTPUT);
  digitalWrite(LED2_PIN, LOW);  // Start with LED2 OFF
}

void loop() {
  delay(100);
}

// Function to receive LED2 state from Master
void receiveLED2State(int byteCount) {
  if (Wire.available()) {
    led2State = Wire.read();
    digitalWrite(LED2_PIN, led2State);  // Turn LED2 ON/OFF

    Serial.print("LED2 Updated: ");
    Serial.println(led2State ? "ON" : "OFF");
  }
}
